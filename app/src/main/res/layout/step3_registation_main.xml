<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBlue"
        android:theme="@style/AppTheme">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorBlue"
            app:popupTheme="@style/AppTheme">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Application Registration"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/dimen_18" />
        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_15"
                android:orientation="vertical">


                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_owner_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Registered Owner name"
                    android:inputType="text"
                    android:textColor="@color/colorBlack"
                    android:textColorHint="@color/colorGray" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_company_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Company Name(as per documentation)"
                    android:inputType="text"
                    android:textColor="@color/colorBlack"
                    android:textColorHint="@color/colorGray" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/search_company_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Search Company type"
                    android:inputType="text"
                    android:textColor="@color/colorBlack"
                    android:textColorHint="@color/colorGray" />


                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_landline_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Enter LandLine Number"
                    android:inputType="text"
                    android:textColor="@color/colorBlack"
                    android:textColorHint="@color/colorGray" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_poc_mobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Enter POC Mobile Number"
                    android:inputType="text"
                    android:textColor="@color/colorBlack"
                    android:textColorHint="@color/colorGray" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_poc_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Enter POC Name"
                    android:inputType="text"
                    android:textColor="@color/colorBlack"
                    android:textColorHint="@color/colorGray" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/select_customer_city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Select City Customer City"
                    android:inputType="text"
                    android:textColor="@color/colorBlack"
                    android:textColorHint="@color/colorGray" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/select_pincode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Select PinCode"
                    android:inputType="text"
                    android:textColor="@color/colorBlack"
                    android:textColorHint="@color/colorGray" />


                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_locality"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Enter Locality"
                    android:inputType="text"
                    android:textColor="@color/colorBlack"
                    android:textColorHint="@color/colorGray" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Enter Address"
                    android:inputType="text"
                    android:textColor="@color/colorBlack"
                    android:textColorHint="@color/colorGray" />


                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_landmark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Enter Landmark"
                    android:inputType="text"
                    android:textColor="@color/colorBlack"
                    android:textColorHint="@color/colorGray" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Enter Email"
                    android:inputType="text"
                    android:textColor="@color/colorBlack"
                    android:textColorHint="@color/colorGray" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_alternative_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Alternative Email"
                    android:inputType="text"
                    android:textColor="@color/colorBlack"
                    android:textColorHint="@color/colorGray" />
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_TAN"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TAN"
                    android:inputType="text"
                    android:textColor="@color/colorBlack"
                    android:textColorHint="@color/colorGray" />
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_Business"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Enter Business"
                    android:inputType="text"
                    android:textColor="@color/colorBlack"
                    android:textColorHint="@color/colorGray" />
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/select_proof"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Select proof"
                    android:inputType="text"
                    android:textColor="@color/colorBlack"
                    android:textColorHint="@color/colorGray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_25"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_previous"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorBlue"
                        android:layout_weight="1"
                        android:text="previous"
                        android:layout_margin="@dimen/dimen_15"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/_14sdp" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_next"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dimen_15"
                        android:layout_weight="1"
                        android:background="@color/colorBlue"
                        android:text="next"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/_14sdp" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>




</LinearLayout>